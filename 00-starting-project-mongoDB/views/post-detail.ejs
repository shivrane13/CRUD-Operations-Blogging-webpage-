<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('includes/head', { title: detail.title }) %>
    <link rel="stylesheet" href="/styles/posts.css" />
  </head>

  <body>
    <%- include('includes/header') %>
    <main id="post-detail">
      <h1><%= detail.title %></h1>
      <section id="post-meta">
        <address>
          <a href="mailto:<%= detail.author.email %>"
            ><%= detail.author.name %>
          </a>
        </address>
        <time>
          <time datetime="<%=detail.date%>"
            ><%= detail.humanReadableDate %></time
          >
        </time>
      </section>
      <hr />
      <section>
        <p id="body"><%= detail.body %></p>
      </section>
    </main>
  </body>
</html>
