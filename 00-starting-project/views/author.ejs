<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('includes/head', { title: 'Add new post' }) %>
    <link rel="stylesheet" href="/styles/posts.css" />
    <link rel="stylesheet" href="/styles/forms.css" />
    <link rel="stylesheet" href="/styles/author.css" />
    <script src="/javascript/author.js" defer></script>
    <title>Log in</title>
  </head>
  <body>
    <%- include('includes/header') %>
    <main>
      <section>
        <h1>Log in as Author</h1>
        <form action="/login" method="POST" id="form">
          <label for="name">Enter Your name</label>
          <input type="text" id="name" name="aname" />
          <label for="email">Enter Your Email</label>
          <input type="email" id="email" name="email" />
          <button class="btn" id="loginbtn">Log In</button>
        </form>
      </section>
      <section id="all-posts">
        <p id="show" class="dis-hide">Show authors</p>
        <div id="list-authors">
          <h1>All Authors</h1>
          <p>Total <strong> <%= acount %> </strong> Author are available</p>
          <% if(!authors || authors.length===0) {%>
          <p>No author found - maybe start creating account?</p>
          <% } else { %>
          <table id="post-list">
            <thead>
              <tr>
                <td>Name</td>
                <td>Email</td>
                <td>Delete</td>
              </tr>
            </thead>
            <tbody>
              <% for(const author of authors) { %>
              <tr>
                <td><%= author.name %> </td>
                <td><%= author.email %> </td>
                <td> <div class="post-actions">
                      <form
                          action="/login/<%=author.id %>/delete"
                          method="POST"
                          id="fdel"
                      >
                      <button class="btn btn-alt">Delete Author</button>
                </form>
              </div> </td>
              </tr>
              <% } %> 
            </tbody>
            <% } %>
          <p class="dis-hide" id="hide">Hide authors</p>
        </div>
      </section>
    </main>
  </body>
</html>
